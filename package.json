{
    "name": "kanban-board",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "next dev --turbopack",
        "build": "next build",
        "start": "next start",
        "lint": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
        "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,scss,css,md}\" \"package.json\" \"tsconfig.json\" \".github/workflows/**/*.yml\"",
        "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,scss,css,md}\" \"package.json\" \"tsconfig.json\" \".github/workflows/**/*.yml\"",
        "prepare": "husky install",
        "test": "echo \"No tests yet\""
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{scss,css,json,md}": "prettier --write"
    },
    "dependencies": {
        "@dnd-kit/core": "^6.3.1",
        "@reduxjs/toolkit": "^2.8.2",
        "classnames": "^2.5.1",
        "next": "15.3.2",
        "next-auth": "^4.24.11",
        "react": "^19.0.0",
        "react-circular-progressbar": "^2.2.0",
        "react-dom": "^19.0.0",
        "react-google-button": "^0.8.0",
        "react-redux": "^9.2.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.27.0",
        "@next/eslint-plugin-next": "^15.3.2",
        "@types/node": "^20.17.50",
        "@types/react": "^19.1.6",
        "@types/react-dom": "^19.1.5",
        "@typescript-eslint/eslint-plugin": "^8.32.1",
        "@typescript-eslint/parser": "^8.32.1",
        "eslint": "^9.27.0",
        "eslint-config-next": "15.3.2",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-prettier": "^5.4.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "globals": "^16.2.0",
        "husky": "^8.0.0",
        "lint-staged": "^16.0.0",
        "prettier": "^3.5.3",
        "sass": "^1.89.0",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.32.1"
    }
}
